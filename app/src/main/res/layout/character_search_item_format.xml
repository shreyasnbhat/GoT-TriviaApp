<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    app:cardCornerRadius="0dp"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="6dp"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="40dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@drawable/avatar_placeholder"
            android:id="@+id/character_image"
            />

        <View
            android:id="@+id/decorator1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/gradient_main" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/decorator1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_toEndOf="@+id/character_image"
            android:text="NAME"
            android:textSize="22sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/playedBy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/name"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_toEndOf="@+id/character_image"
            android:text="PLAYED BY"
            android:textSize="20sp" />

        <View
            android:id="@+id/decorator2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/playedBy"
            android:background="@drawable/gradient_main" />

    </RelativeLayout>

</android.support.v7.widget.CardView>