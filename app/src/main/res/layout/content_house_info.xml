<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/sworn_member_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#60000000"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="16dp"
        android:text="Sworn Members"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <FrameLayout
        android:id="@+id/frame_layout_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sworn_member_text">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sworn_member_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/error_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Nothing Found"
            android:textColor="@color/white"
            android:textSize="32sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/house_wiki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame_layout_recycler"
        android:background="#60000000"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="16dp"
        android:text="House Data"
        android:textColor="@color/white"
        android:textSize="22sp" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Lord"

        android:id="@+id/lord_hint"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="16sp"
        android:layout_below="@+id/house_wiki"
        android:padding="8dp"
        android:gravity="left"
        android:textColor="@color/white"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Current Lord"
        android:gravity="left"
        android:padding="2dp"
        android:id="@+id/lord_details"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:layout_below="@+id/lord_hint"
        android:textColor="@color/white"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Region"
        android:id="@+id/region_hint"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="16sp"
        android:padding="8dp"
        android:gravity="left"
        android:textColor="@color/white"
        android:layout_below="@+id/lord_details"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Region of House"
        android:gravity="left"
        android:padding="2dp"
        android:layout_below="@id/region_hint"
        android:id="@+id/region_details"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:textColor="@color/white"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Words"
        android:gravity="left"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="16sp"
        android:id="@+id/words_hint"
        android:layout_below="@+id/region_details"
        android:padding="8dp"
        android:textColor="@color/white"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Words of the House"
        android:gravity="left"
        android:id="@+id/words_details"
        android:padding="2dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_below="@+id/words_hint"
        />



    <TextView
        android:id="@+id/wiki_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@+id/words_details"
        android:background="#50000000"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="16dp"
        android:text="House Wiki"
        android:textColor="#ffffff"
        android:textSize="22dp"


        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/wiki_details">

        <TextView
            android:id="@+id/house_extract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:textColor="#E0E0E0"
            android:textSize="20sp"

            />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="56dp" />

    </FrameLayout>








</RelativeLayout>