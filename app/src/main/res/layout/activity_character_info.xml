<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_character_info"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context="com.example.shreyas.thrones.CharacterInfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:theme="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Character Biodata"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="22dp"
            android:background="#50000000"
            android:textColor="#ffffff"
            android:id="@+id/bio_details"


            />

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                fresco:roundAsCircle="false"
                fresco:roundedCornerRadius="8dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@drawable/avatar_placeholder"
                android:id="@+id/character_image"
                android:layout_below="@+id/bio_details"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_below="@+id/character_image"
                android:text="Character Wiki"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="22dp"
                android:background="#50000000"
                android:textColor="#ffffff"
                android:id="@+id/wiki_details"


                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/wiki_details"
                >

            <TextView
            android:id="@+id/character_extract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
                android:textColor="#ffffff"
                android:textSize="20sp"

            />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:id="@+id/progressbar"
                android:layout_margin="56dp"
                />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/playedBy_textView_hint"
                android:text="Played By: "
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_alignTop="@+id/character_image"
                android:layout_toEndOf="@+id/character_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"
                android:gravity="left"
                android:textColor="#ffffff"
                android:id="@+id/playedBy_textView"
                android:text="Played By Character"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignTop="@+id/character_image"
                android:layout_toEndOf="@+id/playedBy_textView_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/gender_textView_hint"
                android:text="Gender: "
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/playedBy_textView"
                android:layout_toEndOf="@+id/character_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"
                android:gravity="left"
                android:textColor="#ffffff"
                android:id="@+id/gender_textView"
                android:text="Gender"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/playedBy_textView"
                android:layout_toEndOf="@+id/gender_textView_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/born_textView_hint"
                android:text="Born: "
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/gender_textView"
                android:layout_toEndOf="@+id/character_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"
                android:gravity="left"
                android:textColor="#ffffff"
                android:id="@+id/born_textView"
                android:text="Born"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@+id/born_textView_hint"
                android:layout_below="@+id/gender_textView"
                android:layout_toEndOf="@+id/born_textView_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/died_textView_hint"
                android:text="Died: "
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/born_textView"
                android:layout_toEndOf="@+id/character_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"
                android:gravity="left"
                android:id="@+id/died_textView"
                android:text="Died"
                android:maxLines="2"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@+id/died_textView_hint"

                android:layout_below="@+id/born_textView"
                android:layout_toEndOf="@+id/died_textView_hint" />

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
